<main class="d-flex w-100">
    <div class="container d-flex flex-column">
        <div class="row vh-100">
            <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 mx-auto d-table h-100">
                <div class="d-table-cell align-middle">

                    <div class="text-center mt-4">
                        <h1 class="h2">Forgot Password</h1>
                        <%# <p class="lead">
                            Sign in to your account to continue
                        </p> %>
                    </div>

                    <%= render partial: "shared/flash"%>

                    <div class="card">
                        <div class="card-body">
                            <div class="m-sm-3">
                                <%= form_with url: password_reset_path do |form| %>
                                    <div class="mb-3">
                                        <%= form.label :email, class: "form-label" %>
                                        <%= form.text_field :email, class: "form-control form-control-lg", placeholder: "Enter your email" %>
                                    </div>
                                    <div class="d-grid gap-2 mt-3">
                                        <%= form.submit "Reset Password", class: "btn btn-lg btn-primary"%>
                                    </div>
                                <% end %>
                            </div>
                        </div>
                    </div>
                    <div class="text-center mb-3">
                        Don't have an account? <%= link_to "Sign up", sign_up_path %>
                    </div>
                   <div class="text-center mb-3">
                        Already have account? <%= link_to "Log in", login_path %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>