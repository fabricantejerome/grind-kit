<div class="wrapper">
	<%= render partial: "shared/sidebar" %>
    <div class="main">
        <%= render partial: "shared/topbar" %>

        <main class="content">
            <div class="container-fluid p-0">

                <h1 class="h3 mb-3">Categories</h1>

                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">List of Category</h5>
                            </div>
                            <div class="card-body">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% @categories.each do |category| %>
                                            <tr>
                                                <th scope="row"><%= category.id %></th>
                                                <td><%= category.name %></td>
                                                <td>
                                                    <%= link_to "Edit", category_edit_path(id: category.id) %>
                                                    <%= button_to "Delete", categories_path(id: category.id), method: :delete %>
                                                </td>
                                            </tr>
                                        <% end %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </main>

        <%= render partial: "shared/footer" %>
    </div>
</div>